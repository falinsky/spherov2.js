{
  "name": "spherov2.js",
  "version": "0.0.2",
  "description": "V2 api version for sphero toys (not official)",
  "author": "igbopie",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "engines" : { "node" : ">=10.0.0" },
  "scripts": {
    "debug": "ts-node --inspect-brk src/index.ts",
    "start": "ts-node src/index.ts",
    "build": "rm -fR lib; tsc --declaration",
    "add-all": "git add -A",
    "test": "jest",
    "lint": "tslint --project tsconfig.json -c tslint.json 'src/**/*.ts'",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prettier": "lint-staged"
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test",
    "build",
    "add-all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit-msg && yarn prettier && yarn lint && yarn test && yarn build && yarn add-all"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "noble": "^1.9.0",
    "noble-mac": "git+https://github.com/Timeular/noble-mac.git"
  },
  "devDependencies": {
    "@types/jest": "22.2.3",
    "@types/noble": "0.0.34",
    "@types/noble-mac": "0.0.0",
    "husky": "1.3.1",
    "jest": "22.4.4",
    "lint-staged": "8.1.0",
    "node-inspect": "1.11.5",
    "prettier": "1.15.3",
    "ts-jest": "22.4.6",
    "ts-node": "5.0.1",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "2.9.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
